$HTTP["host"] == "host.dev" {
    server.name = "host.dev" 
    server.document-root = "~/host""
    include "conf.d/php5.3.fcgi.conf"
    #include "conf.d/php5.4.fcgi.conf"
    url.rewrite-once = (
        "^/(.*)\.(.*)" => "$0",
        "^/(.*\.php)" => "$0",
        ".*\?(.*)" => "/app.php?$1",
        "^/(.*)" => "/app.php/$1"
    )
}
