[user]
    name = Klein Florian
    email = florian.klein@free.fr
[core]
    autocrlf = false
    ui = true
    editor = vim
    whitespace = trailing-space,space-before-tab
    mergetool = meld
    excludesfile = /home/florian/.gitignore
[color]
    ui=auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = green
    changed = yellow
    untracked = red
[apply]
    whitespace = fix
[alias]
    up  = pull origin
    sup  = submodule foreach git pull
    st  = status
    df  = diff
    co  = checkout
    cm  = commit
    ctags = !.git/hooks/ctags
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
[init]
    templatedir = ~/.git_template
[rerere]
    enabled = 1
[push]
	default = current
